<body>
  <div class="main" data-role="page" data-position="fixed" data-fullscreen="true">
    <div data-role="header">
      <h1>Header</h1>
      <div id="fb-root"></div>
    </div>
        
    <div class="content" data-role="content">
      <h2>Content</h2>
      <div id="tmp"></div>
      <div id="data"></div>
      
      <button id="login_button" onclick="login()" class="responsive_width" data-inline="false">Login to Facebook</button>
      <button id="logout_button" onclick="logout()" class="responsive_width" data-inline="false">Logout</button>
      <button id="get_data" class="loading responsive_width" data-inline="false">Get my facebook data</a>
    </div>
        
    <div class="footer" data-role="footer" data-position="fixed" data-fullscreen="true">
      <h1>Footer</h1>
    </div>
  </div>
